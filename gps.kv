#:import MapView kivy.garden.mapview.MapView

MyTabbedPanel:

<MyTabbedPanel>:
    do_default_tab: False
    map_view: map_view
    name_input: name_input
    let_help_check: let_help_check
    need_help_check: need_help_check

    male_search: male_search
    female_search: female_search
    japanese_search: japanese_search
    english_search: english_search
    chinese_search: chinese_search
    korean_search: korean_search
    interval_slider: interval_slider

    # need_help_check: need_help_check.state
    male_check: male_check
    female_check: female_check
    japanese_check: japanese_check
    english_check: english_check
    chinese_check: chinese_check
    korean_check: korean_check
    comment_input: comment_input

    register_tab: register_tab
    TabbedPanelItem:
        id: register_tab
        text: 'my info'
        # Label:
        #     text_size: self.size
        #     halign: 'center'
        #     valign: 'center'
        #     text: "under construction"
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                size_hint: (1, 0.9)
                orientation: "horizontal"
                GridLayout:
                    size_hint: (0.2, 1)
                    cols: 1
                    Label:
                        text: 'mode'
                    Label:
                        text: 'name'
                    Label:
                        text: 'gender'
                    Label:
                        text: 'language'
                    Label:
                        text: 'comment'
                    Label:
                        text: 'update\ninterval(sec)'
                GridLayout:
                    size_hint: (0.8, 1)
                    cols: 1
                    GridLayout:
                        cols: 2
                        ToggleButton:
                            id: let_help_check
                            text: "help you"
                            group: "mode"
                        ToggleButton:
                            id: need_help_check
                            text: "help me"
                            group: "mode"

                    MyTextInput:
                        max_characters: 10
                        multiline: False
                        id: name_input
                    GridLayout:
                        cols: 2
                        ToggleButton:
                            id: male_check
                            text: "male"
                            group: "gender"
                        ToggleButton:
                            id: female_check
                            text: "female"
                            group: "gender"

                    GridLayout:
                        cols: 8
                        CheckBox:
                            id: japanese_check
                        Image:
                            source: 'flag093.png'
                        CheckBox:
                            id: english_check
                        Image:
                            source: 'flag198.png'
                        CheckBox:
                            id: chinese_check
                        Image:
                            source: 'flag039.png'
                        CheckBox:
                            id: korean_check
                        Image:
                            source: 'flag099.png'
                    MyTextInput:
                        max_characters: 20
                        multiline: False
                        id: comment_input
                    GridLayout:
                        cols: 2
                        Slider:
                            id: interval_slider
                            min: 30
                            max: 180
                            value: 60
                            # value: root.update_interval
                            step: 10
                            on_touch_move: root.interval_label_text = str(self.value)
                        Label:
                            size: (50, 1)
                            size_hint: (None, 1)
                            text: root.interval_label_text
                            # on_text: interval_slider.value = int(self.text)
            BoxLayout:
                size_hint: (1, 0.1)
                oriental: "vertical"
                Button:
                    text: "REGISTER"
                    on_release: root.name_check()
                    on_release: root.switch_map_tab()
                    on_release: root.current_place()
                    # on_release: root.rest_update()
                    # on_release: root.name_print()

    TabbedPanelItem:
        text: 'map'
        BoxLayout:
            orientation: "vertical"

            MapView:
                size_hint: (1, 0.9)
                id: map_view
                lat: root.lat
                lon: root.lon
                zoom: 12
            
            Button:
                size_hint:(1, 0.1)
                text: 'CURRENT PLACE'
                on_release: root.current_place()
                    
            # GridLayout:
            #     size_hint: (1, 0.1)
            #     cols: 3
            #     Button:
            #         text: 'MARK'
            #         on_release: root.put_marker()
                    
            #     Button:
            #         text: 'UPDATE'
            #         on_release: root.rest_update()
                    
            #     Button:
            #         text: 'CLEAR'
            #         on_release: root.set_status()

    TabbedPanelItem:
        text: 'search'
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                size_hint: (1, 0.9)
                orientation: "horizontal"
                GridLayout:
                    size_hint: (0.2, 1)
                    cols: 1
                    Label:
                        text: 'gender'
                    Label:
                        text: 'language'
                    Label:
                        text: 'update\ninterval(sec)'
                GridLayout:
                    size_hint: (0.8, 1)
                    cols: 1
                    GridLayout:
                        cols: 2
                        ToggleButton:
                            id: male_search
                            text: "Male"
                            group: "gender"
                        ToggleButton:
                            id: female_search
                            text: "Female"
                            group: "gender"

                    GridLayout:
                        cols: 8
                        CheckBox:
                            id: japanese_search
                        Image:
                            source: 'flag093.png'
                        CheckBox:
                            id: english_search
                        Image:
                            source: 'flag198.png'
                        CheckBox:
                            id: chinese_search
                        Image:
                            source: 'flag039.png'
                        CheckBox:
                            id: korean_search
                        Image:
                            source: 'flag099.png'
                    GridLayout:
                        cols: 2
                        Slider:
                            min: 30
                            max: 180
                            value: root.interval_slider.value
                            step: 10
                            on_touch_move: root.interval_slider.value = self.value
                            on_touch_move: root.interval_label_text = str(self.value)
                        Label:
                            size: (50, 1)
                            size_hint: (None, 1)
                            text: root.interval_label_text
            Button:
                size_hint: (1, 0.1)
                text: 'UPDATE'
                on_release: root.change_interval()
                on_release: root.switch_map_tab()

